<style>
html, body { background: #253E7E; }
</style>
<div class="card ml-4" style="display:inline-block;margin-left:525px;padding:30px;margin-top:100px">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h2>Agent Sign up</h2>
<div class="field">
<%= f.label :name ,class: 'sr-only'%><br />
<%= f.text_field :name, autofocus: true ,class: 'form-control-sm' %>
</div>

<div class="field">
<%= f.label :phone ,class: 'sr-only'%><br />
<%= f.text_field :phone, autofocus: true ,class: 'form-control-sm' %>
</div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <br>
  <center>
  <div class="actions">
    <%= f.submit "Sign up",class:"btn btn-primary btn-sm" %>
  </div>
  
  <%if agent_signed_in? %>
  <%= f.hidden_field :company_id, value: current_agent.company_id %>
  <%= f.hidden_field :role, value: 'Non-admin' %>
  <%else%>
  
  
  <%= f.hidden_field :role, value: 'Admin' %>
 <%end%>
  <%= render "devise/shared/links" %>
  </center>
<% end %>
</div>

