<html>
<style>
html, body { background: #253E7E; }
</style>
</body>
<div class="card" style="display:inline-block;margin-left:30%;margin-top:30px;padding:30px">
<span><b>Creating a Sub agent</b> </span>
<br><br>
<%= form_for :agent, url:'/agentscreate' do |f| %>
<%= f.label :name ,class: "label"%><br>
<%= f.text_field :name, class: "input"%><br>
<%= f.label :phone, class: "label"%><br>
<%= f.text_field :phone, class: "input"%><br>



<%= f.label :email , class: "label"%><br/>
<%= f.text_field :email, autofocus: true, autocomplete: "email", class: "input" %><br>
<%= f.hidden_field :role, value:"Non-admin"  %>
<%= f.hidden_field :company_id, value: current_agent.company_id %><br>
<%= f.submit "Create", class: "btn btn-primary" %>
<% end %>
</div>

</body>
</html>