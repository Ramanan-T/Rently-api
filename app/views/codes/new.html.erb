<style>
html, body { background: #253E7E; }
</style>
<div class="card" style="display:inline-block;margin-left:500px;margin-top:50px;padding:30px">
<h2> Adding Custom Code </h2>

<%= form_for @code , url:codes_path do |form| %>
   
  <div>
    <%= form.label :code %><br>
    <%= form.text_field :code %>
  </div>

  <%= hidden_field_tag :property_id, params[:property_id] %>
  

  <div>
    <%= form.submit  "Create Code" ,style:"margin-top:5px;", class: 'btn btn-primary btn-sm'%>
  </div>
<% end %>
</div>