<style>
html, body { background: #253E7E; }
</style>
<div class="card" style="display:inline-block;margin-left:38%;margin-top:200px;padding:30px">
<%= form_for @company , :html => {:id => "form"}, url:'/companies'  do |form| %>
  <h3> Adding Company </h3>
  <div>
    <%= form.label :company_name %><br>
    <%= form.text_field :company_name %>
  </div>

  <div>
    <%= form.label :company_contact , class:"sr-only"%><br>
    <%= form.text_area :company_contact , class:"form-control-sm"%>
  </div>

  <div>
    <%= form.label :company_address   , class:"sr-only"%><br>
    <%= form.text_area :company_address, class:"form-control-sm"%>
  </div>
  <%= form.submit "Create Company",class: 'btn btn-primary btn-sm'%>

</div>

  

  <div>
    
  </div>
<% end %>
