<style>
html, body { background: #253E7E; }
</style>
<div class="card ml-4" style="display:inline-block;margin-left:500px;padding:20px;margin-top:100px;">
<h2> Adding Smartlock </h2>
<%= form_for @smartlock , url:smartlock_index_path do |form| %>
  <div>
    <%= form.label :serial_num %><br>
    <%= form.text_field :serial_num %>
  </div><br>
  <div>
    <%= form.submit "Create Smartlock",class:"btn btn-primary btn-sm" %>
  </div>
<% end %>