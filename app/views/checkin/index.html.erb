<%= render "layouts/navbar"%>
<% @property = Property.find(params[:property_id]) %>
<div class="card" style="display:inline-block;padding:10px;margin-left:350px;margin-top:20px;">
<b>Property Name:</b> <%= @property.property_name %> <br>
<b>Property address:</b> <%= @property.property_address %> <br>
<b>Smartlock Number:</b> <%= @property.smartlock.serial_num %> <br>

</div>
<div style="display:inline-block;margin-left:350px;padding:20px;margin-top:20px;width:50%">
<table class="table">
  <tr>
    
    <th class= "thead-dark">Renter Name</th>
    <th class= "thead-dark">Renter Email</th>
    <th> </th>
    
  </tr>
  

<% @checkin= @property.checkins.last(5).reverse%>
<% @checkin.each do |post| %>
  <tr>
    
    <td><%= post.renter.name %></td>
    <td><%= post.renter.email%></td>
    
    
    
  </tr>
<%end%>

<%= hidden_field_tag :property_id, params[:property_id] %>
</table>



